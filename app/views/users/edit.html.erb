<%= render 'layouts/errors', object: @user %>

<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<h1>User info</h1>
			<%= form_for(@user) do |f| %>

				<%= f.label :name %></br>
				<%= f.text_field :name, placeholder: @user.name, autofocus: true, class: "form-control" %></br>

				<%= f.label :profile_image %></br>
				<%= f.attachment_field :profile_image %></br>

				<%= f.label :introduction %></br>
				<%= f.text_area :introduction, class: "form-control" %></br>

				<%= f.submit class: "form-control btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>