<%= render 'layouts/errors', object: @user %>

<h1>Edit</h1>
<%= form_for(@user) do |f| %>

	<%= f.label :name %></br>
	<%= f.text_field :name, placeholder: @user.name, autofocus: true %></br>

	<%= f.label :profile_image %></br>
	<%= f.attachment_field :profile_image %></br>

	<%= f.label :introduction %></br>
	<%= f.text_area :introduction %></br>

	<%= f.submit %>
<% end %>