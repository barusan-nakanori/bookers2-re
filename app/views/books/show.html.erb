<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h1>User info</h1>
			<%= render "users/info" ,user:@book.user%>
		</div>
		<div class="col-md-9">
			<h1>Book detail</h1>
			<table class= "table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Option</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
					<tbody>
						<tr>
							<td><%= link_to user_path(@book.user) do %>
									<%= attachment_image_tag(@book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg") %><br>
								<% end %>
							</td>
							<td><%= @book.title %></td>
							<td><%= @book.body %></td>
							<% if current_user == @book.user %>
								<td><%= link_to "Edit", edit_book_path(@book) %></td>
								<td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
							<% end %>
						</tr>
					</tbody>
			</table>
		</div>
	</div>
</div>
