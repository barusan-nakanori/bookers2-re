<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>

				<%= f.label :title %></br>
				<%= f.text_field :title, class: "form-control" %></br>

				<%= f.label :opinion %></br>
				<%= f.text_area :body, class: "form-control" %></br>

				<%= f.submit class: "form-control btn btn-primary" %>

			<% end%>
			<%= link_to 'Show',book_path(@book) %> | <%= link_to 'Back',books_path %>
		</div>
	</div>
</div>